{
    "compilerOptions": {
        "declaration": true,
        "outDir": "lib",
        "module": "umd",
        "target": "esnext",
        "inlineSourceMap": true,
        "moduleResolution": "node",
        "lib": [ "ES2022" ],
        "typeRoots" : ["node_modules/@types", "node_modules/types.d.ts/modules", "./types"],
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "baseUrl": "."
    },
    "include":[
        "src/*.ts"
    ]
}